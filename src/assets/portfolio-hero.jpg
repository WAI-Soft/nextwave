<svg width="1920" height="1080" viewBox="0 0 1920 1080" fill="none" xmlns="http://www.w3.org/2000/svg">
  <!-- Background gradient -->
  <defs>
    <linearGradient id="portfolioGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#1a1a2e;stop-opacity:1" />
      <stop offset="50%" style="stop-color:#16213e;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#0f3460;stop-opacity:1" />
    </linearGradient>
    <radialGradient id="accentGlow" cx="50%" cy="50%" r="50%">
      <stop offset="0%" style="stop-color:#00d4ff;stop-opacity:0.3" />
      <stop offset="100%" style="stop-color:#00d4ff;stop-opacity:0" />
    </radialGradient>
  </defs>
  
  <!-- Main background -->
  <rect width="1920" height="1080" fill="url(#portfolioGradient)"/>
  
  <!-- Accent glow -->
  <ellipse cx="960" cy="540" rx="800" ry="400" fill="url(#accentGlow)"/>
  
  <!-- Geometric shapes for portfolio theme -->
  <g opacity="0.1">
    <!-- Large circles -->
    <circle cx="200" cy="200" r="100" fill="#00d4ff" opacity="0.2"/>
    <circle cx="1720" cy="880" r="150" fill="#00d4ff" opacity="0.15"/>
    
    <!-- Rectangles -->
    <rect x="1500" y="100" width="200" height="120" fill="#00d4ff" opacity="0.1" transform="rotate(15 1600 160)"/>
    <rect x="100" y="800" width="180" height="100" fill="#00d4ff" opacity="0.12" transform="rotate(-10 190 850)"/>
    
    <!-- Triangles -->
    <polygon points="1400,300 1500,300 1450,200" fill="#00d4ff" opacity="0.08"/>
    <polygon points="300,600 400,650 350,750" fill="#00d4ff" opacity="0.1"/>
  </g>
  
  <!-- Subtle grid pattern -->
  <defs>
    <pattern id="grid" width="100" height="100" patternUnits="userSpaceOnUse">
      <path d="M 100 0 L 0 0 0 100" fill="none" stroke="#00d4ff" stroke-width="0.5" opacity="0.05"/>
    </pattern>
  </defs>
  <rect width="1920" height="1080" fill="url(#grid)"/>
  
  <!-- Central focus area -->
  <circle cx="960" cy="540" r="300" fill="none" stroke="#00d4ff" stroke-width="2" opacity="0.1"/>
  <circle cx="960" cy="540" r="250" fill="none" stroke="#00d4ff" stroke-width="1" opacity="0.08"/>
</svg>